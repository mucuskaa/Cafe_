<Window x:Class="Cafe.View.AddNewItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cafe.View"
        mc:Ignorable="d"
        Title="AddNewItemWindow" Height="300" Width="300"
         WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Grid Background="#272537">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200">
            <TextBlock Text="Item name" Background="Transparent" Foreground="White"/>
            <TextBox x:Name="tbItemName" Text=""/>
            <TextBlock Text="Price" Background="Transparent" Foreground="White"/>
            <TextBox x:Name="tbItemPrice" Text=""/>
        </StackPanel>
        <Button x:Name="bAddItem" Grid.Row="1" Content="Add item" Background="#FFFFFEFE" Click="bAddItem_Click"/>
    </Grid>
</Window>
