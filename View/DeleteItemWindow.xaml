<Window x:Class="Cafe.View.DeleteItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cafe.View"
         mc:Ignorable="d"
        Title="DeleteItemWindow" Height="100" Width="200"
        ResizeMode="NoResize"
        Background="Transparent">
    <Grid Background="#272537">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="100">
            <TextBlock Text="Item number" Background="Transparent" Foreground="White"/>
            <TextBox x:Name="tbItemNumber" Text=""/>
        </StackPanel>
        <Button x:Name="bDeleteItem" Grid.Row="1" Content="Delete" Background="White" Click="bDeleteItem_Click"/>
    </Grid>
</Window>