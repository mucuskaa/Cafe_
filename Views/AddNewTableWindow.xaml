<Window x:Class="Cafe.View.AddNewTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cafe.View"
        mc:Ignorable="d"
        Title="AddNewTableWindow" Height="300" Width="300"
        ResizeMode="NoResize"
        Background="Transparent">
    <Grid Background="#272537">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200">
            <TextBlock Text="Status" Background="Transparent" Foreground="White"/>
            <ComboBox x:Name="tbTableStatus" Text="">
                <ComboBoxItem Content="Occupated"/>
                <ComboBoxItem Content="Reserved"/>
                <ComboBoxItem Content="Empty"/>
            </ComboBox>
        </StackPanel>
        <Button x:Name="bAddTable" Grid.Row="1" Content="Add table" Background="#FFFFFEFE" Click="bAddTable_Click_1"/>
    </Grid>
</Window>
